<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <View
            android:id="@+id/visual_background"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/regbutton_color"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Date"
            android:textAlignment="center"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/sleep_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:text="Sleep" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/sleep_text"
            android:layout_toStartOf="@id/sleep_text"
            app:srcCompat="@drawable/ic_bed" />

        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_above="@id/sleep_text"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray" />
        <View
            android:id="@+id/anxiety_visual"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@id/sleep_text"
            android:layout_marginBottom="10dp"
            android:background="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_above="@id/anxiety_visual"/>
    <TextView
        android:id="@+id/weight_visual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:layout_above="@id/anxiety_visual"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/weight_visual"
        android:background="@android:color/darker_gray"/>
        <ImageView
            android:id="@+id/icon_3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_above="@id/weight_visual" />

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_above="@id/icon_3"
            />

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_above="@id/icon_2" />

    </RelativeLayout>