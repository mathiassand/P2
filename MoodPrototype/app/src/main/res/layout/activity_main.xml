<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context="com.p2prototype.b217.moodprototype.MainActivity">

    <ImageButton
        android:id="@+id/moodButton"
        android:layout_width="184dp"
        android:layout_height="250dp"
        android:layout_weight="0.5"
        android:background="@color/backGround"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/mood_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton5"
        app:layout_constraintRight_toLeftOf="@+id/imageButton3"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.461" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="29dp"
        android:text="STEMNINGSLEJE"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/moodButton"
        app:layout_constraintTop_toTopOf="@+id/moodButton"
        tools:layout_editor_absoluteX="13dp"
        app:layout_constraintHorizontal_bias="0.555" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="184dp"
        android:layout_height="250dp"
        android:layout_weight="0.5"
        android:background="@color/backGround"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/stat_button"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="99dp"
        android:layout_height="26dp"
        android:text="Historik"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textAllCaps="true"

        app:layout_constraintTop_toTopOf="@+id/imageButton3"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageButton3"
        tools:layout_editor_absoluteX="254dp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="184dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_weight="0.5"
        android:background="@color/backGround"
        android:padding="0dp"

        app:srcCompat="@mipmap/info_button"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-28dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="184dp"
        android:layout_height="250dp"
        android:background="@color/backGround"
        android:scaleType="centerCrop"
        android:layout_weight="0.5"
        android:padding="0dp"
        app:srcCompat="@mipmap/settings_button"
        app:layout_constraintRight_toLeftOf="@+id/imageButton4"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indstillinger"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/imageButton5"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageButton5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton5"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="143dp"
        android:layout_height="26dp"
        android:text="Information"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="@+id/imageButton4"
        android:layout_marginTop="29dp"
        tools:layout_editor_absoluteX="196dp" />
</android.support.constraint.ConstraintLayout>
