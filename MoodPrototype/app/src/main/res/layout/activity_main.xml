<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context="com.p2prototype.b217.moodprototype.MainActivity">

    <ImageButton
        android:id="@+id/moodButton"
        android:layout_width="184dp"
        android:layout_height="250dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="-12dp"
        android:layout_weight="0.5"
        android:background="@color/backGround"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/mood_button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="29dp"
        android:text="STEMNINGSLEJE"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:shadowColor="#000000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/moodButton"
        app:layout_constraintTop_toTopOf="@+id/moodButton" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="184dp"
        android:layout_height="250dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.5"
        android:background="@color/backGround"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/moodButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/stat_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:text="Historik"
        android:textColor="@android:color/white"
        android:shadowColor="#000000"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/imageButton3"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageButton3" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="184dp"
        android:layout_height="250dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:layout_weight="0.5"
        android:background="@color/backGround"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        app:srcCompat="@mipmap/info_button"
        tools:layout_editor_absoluteX="190dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="168dp"
        android:layout_height="250dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/backGround"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageButton4"
        app:layout_constraintTop_toBottomOf="@+id/moodButton"
        app:srcCompat="@mipmap/settings_button"
        tools:layout_editor_absoluteY="178dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indstillinger"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:shadowColor="#000000"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/imageButton5"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageButton5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton5"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
